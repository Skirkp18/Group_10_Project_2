<div class="w3-bar w3-top w3-black w3-large" style="z-index:4">
  <button class="w3-bar-item w3-button w3-hide-large w3-hover-none w3-hover-text-light-grey" onclick="w3_open();"><i class="fa fa-bars"></i>  Menu</button>
  <span class="w3-bar-item w3-right"> <img src="images/quarantinecoach.png"></img></span>
</div>

<!-- Sidebar/menu -->
<nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar"><br>
  <div class="w3-container w3-row">
    <div class="w3-col s4">
        <i class="fa fa-user fa-fw"></i>
    </div>
    <div class="w3-col s8 w3-bar">
      <span>Welcome, <strong>{{firstName}}</strong></span><br>
    </div>
  </div>
  <hr>
  <div class="w3-container">
    <h5>Dashboard</h5>
  </div>
  <div class="w3-bar-block">
    <a href="#" class="w3-bar-item w3-button w3-padding-16 w3-hide-large w3-dark-grey w3-hover-black" onclick="w3_close()" title="close menu"><i class="fa fa-remove fa-fw"></i>  Close Menu</a>
    <a href="#" class="w3-bar-item w3-button w3-padding"><i class="fa fa-weight-hanging fa-fw"></i>Gyms Open Page</a>
    <a href="#" class="w3-bar-item w3-button w3-padding w3-blue"><i class="fa fa-walking fa-fw"></i>You are on the Gym's are closed page!</a>
    <a class="navbar-brand" href="/logout">Logout</a>
  </div>
</nav>


<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main container" style="margin-left:300px;margin-top:43px;">

  <!-- Header -->
  <header class="w3-container" style="padding-top:22px">


      <h1 id="name">Welcome To NYS Quarentine Coach {{firstName}} {{lastName}}</h1>
    <br>
    <h2>Gym's in your area (County: {{county}}) are possibly closed due to New York State COVID-19 regulations (Information Generated From NYS COVID-19 API).</h2>
    


  </header>


  <div class="row">
      <div class="col-md-6">
    <h2>Current Data As Of:</h2>
    <h2>{{testDate}}</h2>
    <br>
    <h2>Current Inffection Rate:</h2>
    <h2>{{covidRate}}%</h2>
        <br>
    <h2>Current Postitive Tests:</h2>
    <h2>{{newPositives}}</h2>
    <br>
    <h2>Number of Test In Your County:</h2>
    <h2>{{numberOfTests}}</h2>
      </div>
      <div class=" col-md-6" id="outdoorActivity">
          <h2>Check Out The COVID Rate In Your Area:</h2>
          <iframe width="560" height="560" src="https://app.developer.here.com/coronavirus/" frameborder="0"></iframe>
          <div id="activityInput">
              
          </div>
      </div>
  </div>
  <!-- Footer -->
           <footer>
    <div class="fb-share-button" data-href="https://group-10-project-2.herokuapp.com/" data-layout="button"
      data-size="small"><a target="_blank"
        href="https://www.facebook.com/sharer/sharer.php?u=https://group-10-project-2.herokuapp.com"
        class="fb-xfbml-parse-ignore"><i class="fab fa-facebook-f"></i>Share to Facebook</a></div>
    <br>
    <p>© Qaurentine Coach | All rights reserved.</p>
  </footer>

  <!-- End page content -->
</div>


<script>
// Get the Sidebar
var mySidebar = document.getElementById("mySidebar");

// Get the DIV with overlay effect
var overlayBg = document.getElementById("myOverlay");

// Toggle between showing and hiding the sidebar, and add overlay effect
function w3_open() {
  if (mySidebar.style.display === 'block') {
    mySidebar.style.display = 'none';
    overlayBg.style.display = "none";
  } else {
    mySidebar.style.display = 'block';
    overlayBg.style.display = "block";
  }
}

// Close the sidebar with the close button
function w3_close() {
  mySidebar.style.display = "none";
  overlayBg.style.display = "none";
}

</script>

